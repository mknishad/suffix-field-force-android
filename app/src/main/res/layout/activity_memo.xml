<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".abul.activity.MemoListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:textSize="22sp"
          android:textStyle="bold"
          android:textColor="@color/colorMintLight"
          android:fontFamily="@font/solaimanlipi"
          android:padding="5dp"
          android:text="সকল মেমো" />

      <TextView
          android:id="@+id/txtTotalMemo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="textEnd"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:textSize="22sp"
          android:textStyle="bold"
          android:textColor="@color/colorMintLight"
          android:fontFamily="@font/solaimanlipi"
          android:padding="5dp"
          android:text="মোট : ১২০ " />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_memo_item"
        android:background="@android:color/white"/>


</LinearLayout>