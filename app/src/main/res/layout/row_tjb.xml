<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/only_border"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_margin_2">

  <TextView
      android:id="@+id/txtAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorLavanderDark"
      android:padding="@dimen/padding_2"
      android:text="GULSHAN"
      android:textAlignment="center"
      android:textColor="@color/color_white" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_2"
      android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="FROM"
          android:textAlignment="center" />

      <TextView
          android:id="@+id/txtFCoreId"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/border_green"
          android:paddingLeft="@dimen/padding_4"
          android:paddingTop="@dimen/padding_1"
          android:paddingRight="@dimen/padding_4"
          android:paddingBottom="2dp"
          android:text="C-101-010"
          android:textColor="@android:color/white"
          android:textSize="10sp" />

      <TextView
          android:id="@+id/txtFCore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/border_red"
          android:paddingLeft="@dimen/padding_4"
          android:paddingTop="@dimen/padding_1"
          android:paddingRight="@dimen/padding_4"
          android:paddingBottom="2dp"
          android:text="10"
          android:textColor="@android:color/white"
          android:textSize="10sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="TO"
          android:textAlignment="center" />

      <TextView
          android:id="@+id/txtTCoreId"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/border_green"
          android:paddingLeft="@dimen/padding_4"
          android:paddingTop="@dimen/padding_1"
          android:paddingRight="@dimen/padding_4"
          android:paddingBottom="2dp"
          android:text="C-101-010"
          android:textColor="@android:color/white"
          android:textSize="10sp" />

      <TextView
          android:id="@+id/txtTCore"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/border_red"
          android:paddingLeft="@dimen/padding_4"
          android:paddingTop="@dimen/padding_1"
          android:paddingRight="@dimen/padding_4"
          android:paddingBottom="2dp"
          android:text="10"
          android:textColor="@android:color/white"
          android:textSize="10sp" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>