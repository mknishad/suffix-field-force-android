<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

  <LinearLayout
      android:id="@+id/layoutRow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginHorizontal="5dp"
      android:layout_marginBottom="5dp"
      android:background="@drawable/shadow_row">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgCigar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:padding="2dp"
            android:adjustViewBounds="true"
            app:placeholderImage="@drawable/simpleimageplaceholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/txtProductCode">

          <TextView
              android:id="@+id/txtInHandQt"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="1dp"
              android:layout_weight="1"
              android:background="@color/colorMintDark"
              android:text="34"
              android:textAlignment="center"
              android:textColor="@android:color/white"
              android:textSize="18sp" />

          <TextView
              android:id="@+id/txtSalesQt"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/colorMintDark"
              android:text="1400"
              android:textAlignment="center"
              android:textColor="@android:color/white"
              android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtProductCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="MARISE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#BC2B2B2B"
            android:layout_below="@id/imgCigar"/>

        <TextView
            android:id="@+id/txtTotalMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorMintDark"
            android:paddingHorizontal="10dp"
            android:text="1200"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>

</LinearLayout>