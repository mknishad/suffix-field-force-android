<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_whitetranssparent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_margin_5">

        <TextView
            android:id="@+id/ticketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suffix IT Limited - 101 : Advance Task List (Admin App)"
            android:textStyle="bold"
            android:textColor="@color/color_green"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/layout_height_20"
            android:layout_height="@dimen/layout_height_20"
            android:layout_below="@+id/ticketTitle"
            android:layout_marginTop="@dimen/layout_margin_5"
            android:layout_marginRight="@dimen/layout_margin_5"
            android:src="@drawable/consultant" />

        <TextView
            android:id="@+id/consumerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticketTitle"
            android:layout_marginTop="@dimen/layout_margin_5"
            android:layout_toRightOf="@+id/profileImage"
            android:text="Mohammad Solaiman" />

        <TextView
            android:id="@+id/consumerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consumerName"
            android:layout_toRightOf="@+id/profileImage"
            android:text="01914667359"
            android:textColor="@color/colorMintDark"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_5"
        android:background="@color/color_white"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAquaDark"
            android:padding="2dp"
            android:text="Details"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Comments (2)"
            android:textAlignment="center"
            android:textColor="@color/colorAquaDark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Files (1)"
            android:textAlignment="center"
            android:textColor="@color/colorAquaDark" />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:background="@color/colorWhite"
                android:padding="@dimen/padding_2"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ADDRESS"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/consumerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="H-202/E, R-6, Mohammadia housing lts, 2nd f"/>
                    <TextView
                        android:id="@+id/consumerThana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhaka"/>
                    <TextView
                        android:id="@+id/consumerDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhaka"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:padding="@dimen/padding_2"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TASK"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BGD0636536"/>
                    <TextView
                        android:id="@+id/deviceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Classic GKK 3000 Liter"/>
                    <TextView
                        android:id="@+id/ticketCateroryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Express Service"/>
                    <TextView
                        android:id="@+id/ticketStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assigned"/>

                </LinearLayout>

            </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_5"
            app:cardElevation="@dimen/layout_margin_5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="DATE"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <CalendarView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusedMonthDateColor="@color/colorMintDark"
                        />

                    <!--                <TextView-->
                    <!--                    android:id="@+id/orderId"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="BGD0636536"/>-->
                    <!--                <TextView-->
                    <!--                    android:id="@+id/deviceName"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="Classic GKK 3000 Liter"/>-->
                    <!--                <TextView-->
                    <!--                    android:id="@+id/ticketCateroryTitle"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="Express Service"/>-->
                    <!--                <TextView-->
                    <!--                    android:id="@+id/ticketStatusText"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="Assigned"/>-->

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

</LinearLayout>