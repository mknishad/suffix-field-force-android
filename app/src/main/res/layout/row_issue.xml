<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="2dp"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/ticketCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorMint"
        android:padding="@dimen/padding_1"
        android:text="SUFFIX-12"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/ticketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ticketCode"
        android:padding="4dp"
        android:text="This is a demo issue for pre defense" />

    <TextView
        android:id="@+id/ticketStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketCode"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_margin_5"
        android:background="@drawable/border_mint"
        android:paddingLeft="@dimen/padding_2"
        android:paddingTop="@dimen/padding_1"
        android:paddingRight="@dimen/padding_2"
        android:paddingBottom="2dp"
        android:text="Not Started"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/ticketStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticketStatusText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/borderorange"
        android:paddingLeft="@dimen/padding_2"
        android:paddingTop="@dimen/padding_1"
        android:paddingRight="@dimen/padding_2"
        android:paddingBottom="2dp"
        android:text="10 June, 2019"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticketCode"
        android:layout_toLeftOf="@+id/ticketStartDate"
        android:layout_alignParentStart="true"
        android:gravity="start"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProjectIcon"
            android:layout_width="@dimen/layout_height_20"
            android:layout_height="@dimen/layout_height_30"
            android:src="@drawable/consultant" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/consumerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="Dr. Solaiman"
                android:textColor="@color/colorMint"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/consumerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Dhaka\nDhaka"
                android:inputType="textMultiLine"
                android:textSize="10sp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
