<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar"
      android:layout_width="match_parent"
      android:layout_height="290dp"
      android:minHeight="280dp"
      android:background="@color/colorMintLight"
      android:fitsSystemWindows="true"
      android:theme="@style/AppTheme.NoActionBar">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="@color/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_collapseMode="pin"
          app:title="" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="@dimen/layout_margin_15"
      android:gravity="center_horizontal"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

      <ImageView
          android:id="@+id/imgNotification"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_notification"
          android:layout_alignParentRight="true"
          app:tint="@android:color/white"
          android:layout_marginRight="@dimen/layout_margin_15"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgUserProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/consultant" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_10"
        android:text="শরিফ (ডিস লাইন)"
        android:fontFamily="@font/solaimanlipi"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUserAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="YOUR LOCATION WILL BE APPEARED HERE"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/layout_margin_10"/>

  </LinearLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/backgroundcolor"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:weightSum="2">

        <LinearLayout
            android:id="@+id/layoutTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin_10"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <ImageView
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_violet_very_light"
              android:padding="10dp"
              android:src="@drawable/ic_cart"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="সেল"
              android:fontFamily="@font/solaimanlipi"
              android:textAlignment="center"
              android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRoster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <ImageView
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_sky_light"
              android:padding="10dp"
              android:src="@drawable/ic_date_range"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="মেমো"
              android:fontFamily="@font/solaimanlipi"
              android:textAlignment="center"
              android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBilling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_orange_light"
              android:padding="@dimen/padding_10"
              android:src="@drawable/ic_monetization"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="BILLING"
              android:textAlignment="center"
              android:textSize="12sp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="24dp"
          android:weightSum="2">

        <LinearLayout
            android:id="@+id/layoutInventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin_10"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <ImageView
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_sky_light"
              android:padding="10dp"
              android:src="@drawable/ic_stock"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="স্টক"
              android:fontFamily="@font/solaimanlipi"
              android:textAlignment="center"
              android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGIS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <ImageView
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_violet_dark"
              android:padding="10dp"
              android:src="@drawable/ic_local_hospital"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="স্লাইড কালেক্ট"
              android:fontFamily="@font/solaimanlipi"
              android:textAlignment="center"
              android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSiteMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shadow_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_20"
              android:background="@drawable/round_pink_dark"
              android:padding="@dimen/padding_10"
              android:src="@drawable/ic_bus"
              app:tint="@color/colorWhite" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_10"
              android:layout_marginBottom="@dimen/layout_margin_15"
              android:text="TRANSPORT"
              android:textAlignment="center"
              android:textSize="12sp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="75dp"
          android:background="@drawable/shadow_background_fill"
          android:gravity="center"
          android:layout_marginHorizontal="25dp"
          android:layout_marginTop="25dp"
          android:layout_marginBottom="25dp"
          >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_sync"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:paddingVertical="5dp"
            android:layout_marginRight="@dimen/layout_margin_20"
            app:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সেলস ক্লোজিং"
            android:fontFamily="@font/solaimanlipi"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="28sp" />
      </LinearLayout>

    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <RelativeLayout
      android:id="@+id/card"
      android:layout_width="wrap_content"
      android:layout_height="130dp"
      android:layout_marginStart="46dp"
      android:layout_marginEnd="46dp"
      android:layout_marginTop="100dp"
      android:layout_marginBottom="40dp"
      android:background="@drawable/shadow_background"
      android:gravity="center_vertical"
      app:layout_anchor="@id/app_bar"
      app:layout_anchorGravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

      <LinearLayout
          android:id="@+id/layoutAttendance"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_horizontal"
          android:orientation="vertical">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginTop="@dimen/layout_margin_20"
            android:background="@drawable/round_green_light"
            android:padding="10dp"
            android:src="@drawable/ic_person"
            app:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_marginBottom="@dimen/layout_margin_10"
            android:text="হাজিরা"
            android:fontFamily="@font/solaimanlipi"
            android:textAlignment="center"
            android:textSize="22sp" />
      </LinearLayout>

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_marginVertical="@dimen/layout_height_10"
          android:background="#412B2B2B" />

      <LinearLayout
          android:id="@+id/layoutExit"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_horizontal"
          android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/layout_margin_20"
            android:background="@drawable/round_pink_light"
            android:padding="10dp"
            android:src="@drawable/ic_exit"
            app:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_marginBottom="@dimen/layout_margin_10"
            android:text="বাহির"
            android:fontFamily="@font/solaimanlipi"
            android:textAlignment="center"
            android:textSize="22sp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layoutChat"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_weight="2"
            android:background="@drawable/round_violet_light"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_chat"
            app:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_5"
            android:layout_marginBottom="@dimen/layout_margin_5"
            android:text="CHAT"
            android:textAlignment="center"
            android:textSize="12sp" />
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>