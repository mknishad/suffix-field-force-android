<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/shadow_background"
    android:paddingBottom="10dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="5dp"
      android:paddingHorizontal="10dp"
      android:layout_marginTop="@dimen/padding_5">

<!--    <ImageView-->
<!--        android:layout_width="60dp"-->
<!--        android:layout_height="60dp"-->
<!--        android:src="@drawable/fb" />-->

    <TextView
        android:id="@+id/storeFirstLatterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        android:background="@drawable/circle_blue"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

      <TextView
          android:id="@+id/txtUsername"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rafsan Rafi"
          android:textColor="@color/colorMintDark"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txtStorename"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rafsan Store"
          android:textColor="@android:color/darker_gray"
          android:textSize="14sp" />

    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginHorizontal="20dp"
      android:background="@android:color/darker_gray"
      android:layout_marginTop="10dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:paddingHorizontal="10dp"
      android:paddingTop="10dp"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="5dp"
      android:paddingHorizontal="10dp"
      android:paddingTop="10dp"
      android:paddingBottom="@dimen/padding_5">

    <ImageView
        android:id="@+id/icLocation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_location"
        app:tint="#C92B2B2B"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:text="Halishahar, Chittagong"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/btnActive"
        android:layout_toRightOf="@id/icLocation"/>
    <Button
        android:id="@+id/btnActive"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_height_40"
        android:text="ACTIVATE"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#2b2b2b"
        android:drawableLeft="@drawable/ic_baseline_lock_24"/>

  </RelativeLayout>



</LinearLayout>